#syntax of for loop
#for element in iterable:
      #body
#python program to print n natural numbers
n=int(input("enter number:"))
for i in range(0,n):        #n+1, n-1 variations can be utilized to include n or exclude it
    print(i)
#range(start,end,step)

n=int(input("enter number:"))
for i in range(0,n,2):
    print(i)

#to find the multiples of 7 upto 100 using range
n=int(input("enter number:"))
for i in range(7,n,7):
    print(i)

#creating a list using square brackets
mark=[90,89,78,89,90]
for i in mark:
    print(i)

#total and average from list using for
mark=[90,89,78,89,90]
total=0
for i in mark:
    total=total+i
    avg=total/len(mark)
print("average:",avg)
print("total:",total)

#using lists to find the no of vowels and consonants in for loop
s1=input("enter name:").lower()
v=[]
for i in s1:
    if (i=="a"or i=="e"or i=="i"or i=="o"or i=="u") :
        v.append(i)
    
    print(i)

#for pattern creation using numericals   
print("number of vowels:",len(v))
print("number of consonants:",len(s1)-len(v))

n=int(input("enter number:"))
for row in range(1,n+1):             #this loop is for the rows
    for col in range(i,row+1):           #this loop is for causing iterations and printing
        print(row,end="")              #end="" - means that the print continues on the same line
    print("")                           #outside print is for printing on a new line


#creating a very basic mark sheet
Name= input("Enter Your Name: ")
Regno= input("Enter Your Registration Number: ")
Python= int(input("Enter your marks for Python: "))
BDM= int(input("Enter Your Marks for BDM: "))
MS= int(input("Enter your marks for Management Science: "))
SMR= int(input("Enter your marks in Statistical modelling using R: "))
AI= int(input("enter your marks for Artificial intellegince for managers: "))
DM= int(input("Enter your Marks for Digital Marketing: "))
total= Python+BDM+MS+SMR+AI+DM
average= total/2
print("YOUR MARKSHEET")
print("Name: " +Name)
print("Registration Number: " + Regno)
print("Python: ", end="")
print(Python)
print("Business Data Management: ", end="")
print(BDM)
print("Management Science: ", end="")
print(BDM)
print("Statistical Modelling using R: ", end="")
print(SMR)
print("Artificial Intelligence for Managers: ", end="")
print(AI)
print("Digital Marketing: ", end="")
print(DM)
print("Total Marks Scored: ", end="")
print(total)
print("Total Average: ", end="")
print(average)
